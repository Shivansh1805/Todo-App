
<div class = "card mt-5">
  <p class='card-body'>
  <b>Description:</b>
  <%= @todo_item.description %>
  </p>

  <p class='card-body'>
  <b>Completed:</b>
  <%= @todo_item.completed %>
  </p>

  <p class='card-body'>
  <b>Reminder:</b>
  <%= @todo_item.reminder %>
  </p>

  <p class='card-body'>
  <b>Completed at:</b>
  <%= @todo_item.completed_at %>
  </p>

  <p class='card-body'> 
  <b>Todo list:</b>
  <%= @todo_item.todo_list %>
  </p>

  <div align='center'>
    <%= link_to 'Edit', edit_todo_list_todo_item_path(@todo_item.todo_list, @todo_item) %> |
    <%= link_to 'Back', todo_list_todo_items_path(@todo_item.todo_list) %>
  </div>

</div>
