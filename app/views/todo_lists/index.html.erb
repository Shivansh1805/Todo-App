
<div class = "card mt-5">
  <div class = "card-header d-flex justify-content-between">
    <h3><b>Todo Lists</b></h3>
    <%= link_to 'New Todo List', new_todo_list_path, class:'btn btn-info btn-sm'%>
  </div>

  <ul class='list-group'>
    <% @todo_lists.each do |todo_list| %>

      <li class='list-group-item bg-light' >
              <div class="d-flex justify-content-between">
                <span>
                  <b color=blue><%= todo_list.title %></b>
                </span>
                <div class="article-action">
                <%= link_to 'Show', todo_list, class:'btn btn-success btn-xs'%>
                <%= link_to 'Edit', edit_todo_list_path(todo_list), class:'btn btn-primary btn-xs'%>
                <%= link_to 'Delete', [todo_list], class:'btn btn-danger btn-xs',method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
              </div>
        </li>
    <% end %>
  </ul>
</div>

