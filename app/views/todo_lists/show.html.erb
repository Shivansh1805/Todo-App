<div class = "card mt-5">
    <div class = "card-header d-flex justify-content-between">
      <div>
        <h5><b><%= @todo_list.title %></b></h5>
        <p class='text-secondary'><small><%= @todo_list.percent_complete %> % Complete (<%= @todo_list.completed_items%>/<%= @todo_list.total_items%> Todo Items)</small></p>
      </div>
      <div>
        <%= link_to 'Add new Todo', new_todo_list_todo_item_path(@todo_list), class:'btn btn-primary '%>
      </div>
    </div>
    <div class="card-body">
      <div class="progress mb-4">
        <div class="progress-bar bf-info" role="progressbar" style="width: <%= @todo_list.percent_complete %>%" aria-valuenow="<%=@todo_list.percent_complete %>" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
      <ul class='list-group'>
          <% @todo_list.todo_items.each do |todo_item| %>
            <% if todo_item.completed == false %>
              <li class='list-group-item'>
                <div class="d-flex justify-content-between">
                  <span>
                    <%= todo_item.description %>
                  </span>
                  <%= link_to 'Edit', edit_todo_list_todo_item_path(todo_item.todo_list, todo_item), class:'btn btn-info' %>
                </div>
              </li>
            <%end%>
          <% end %> 

          <% @todo_list.todo_items.each do |todo_item| %>
            <% if todo_item.completed != false %>
              <li class='list-group-item bg-light' >
                <div class="d-flex justify-content-between">
                  <span class='text-muted'>
                    <em><%= todo_item.description %></em> 
                  </span>
                  <%= link_to 'Edit', edit_todo_list_todo_item_path(todo_item.todo_list, todo_item), class:'btn btn-dark' %>
                </div>
              </li>
              <%end%>
          <% end %> 
      </ul>
    </div>
</div>


